class StringService{
	public void printFileName(String[] files, String extention) {
		/*
		 * ±¸ÇöÇÏ¼¼¿©...
		 * 1. files¿¡ µé¾îÀÖ´Â ÆÄÀÏ Áß¿¡¼­ È®ÀåÀÚ°¡ ÀÔ·ÂµÈ °Í°ú µ¿ÀÏÇÑ(?)
		 * °ÍÀÌ ÀÖ´Ù¸é ±×¿¡ ÇØ´çÇÏ´Â ÆÄÀÏ¸íÀ» ­ˆ·ÂÇØ¾ß ÇÑ´Ù.
		 * (ÀÌ¶§ È®ÀåÀÚ´Â Á¦¿ÜÇÏ°í ÆÄÀÏ¸í¸¸)
		 */
		for(String f : files) {
			if(f.endsWith(extention)) {
				System.out.println(f.replace("."+extention, ""));
			}
		}
		
		
	}//
	
